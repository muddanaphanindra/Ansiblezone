{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description": "This is cloud formation",
    "Resources":{
        
        "ec2instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": "Ansible",
                "ImageId": {"ami-227ce15a"},
                "InstanceType": "t2.micro-",
                "Monitoring": "true",
                "Tags": [
                    {
                        "Key": "Hello-phani",
                        "Value": "hii"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -ex",
                                "apt-get update",
                                "apt-get install tree -y"
                            ]
                        ]
                    }
                }
                }
        },
        
        "ec2Volume": {
           "Type": "AWS::EC2::Volume",
           "Properties": {
              "AutoEnableIO": "true",
              "AvailabilityZone": "-",
              "Encrypted": "true",
              "Size": "8",
              "SnapshotId": "snap-",
              "Tags": [
                    {
                        "Key": "-",
                        "Value": "-"
                    }
                ],
              "VolumeType" : "gp2"
           }
        }
        
    }

}